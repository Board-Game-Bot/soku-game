{
  "compilerOptions": {
    "target": "es2018",
    "module": "NodeNext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,

    "strict": true,
    "jsx": "react-jsx",
    "types": [
      "node"
    ],
    "paths": { }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
  ]
}
