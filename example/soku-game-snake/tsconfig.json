{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist",
    "jsx": "react-jsx",
    "types": ["node"],
    "paths": { }
  },
  "include": [".d.ts", "src/**/*"],
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/*.module.scss",
    "**/*.scss"
  ]
}
